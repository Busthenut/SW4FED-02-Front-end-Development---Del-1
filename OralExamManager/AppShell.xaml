<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OralExamManager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:OralExamManager.Views"
    Title="Oral Exam Manager">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Create Exam"
        ContentTemplate="{DataTemplate views:CreateExamPage}"
        Route="CreateExamPage" />

    <ShellContent
        Title="Add Students"
        ContentTemplate="{DataTemplate views:AddStudentsPage}"
        Route="AddStudentsPage" />

    <ShellContent
        Title="Exam"
        ContentTemplate="{DataTemplate views:ExamPage}"
        Route="ExamPage" />

    <ShellContent
        Title="History"
        ContentTemplate="{DataTemplate views:HistoryPage}"
        Route="HistoryPage" />

</Shell>
